<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <StartupObject>WpfApp.App</StartupObject>
    <RootNamespace>ReactiveTodoList.Wpf</RootNamespace>
    <ApplicationIcon>ReactiveTodoList.WPF.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="ReactiveTodoList.WPF.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ReactiveUI.WPF" Version="19.5.41" />
  </ItemGroup>

</Project>
